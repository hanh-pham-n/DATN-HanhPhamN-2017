source 'https://github.com/CocoaPods/Specs.git'
# platform :ios, '9.0'
use_frameworks!

def app_pods
    # Networking
    pod 'Alamofire',                '~> 4.4.0'
    pod 'AlamofireObjectMapper',    '~> 4.1.0'
    pod 'FSOAuth',                  '~> 1.2.1'
    
    # Database
    pod 'RealmSwift',               '~> 2.2.0'
    
    # UI
    pod 'PageMenu',                 '~> 2.0.0'
    pod 'SVPullToRefresh',          '~> 0.4.1'

    # Utils
    pod 'SwiftUtils',               '~> 2.1.1'
    pod 'SnapKit',                  '~> 3.2.0'
    pod 'SDWebImage',               '~> 4.0.0'
    
    # GoogleMaps
    pod 'GoogleMaps',               '~> 2.2.0'
end

target 'FourSquare' do
    app_pods
end
